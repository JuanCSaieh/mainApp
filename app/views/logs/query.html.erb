<div>
    <div>
        <h1>Listado de logueos</h1>
    </div>
    <div>     
        <form action = "logs/query" method="GET" >           
            <br>
            <label for="docType">Tipo de Documento</label>
            <br>
            <select id="docType" name="docType", required>
            <option value=0>Cedula</option>
            <option value=1>Tarjeta Identidad</option>
            </select>
            <br>
            <label for="docNum">NÃºmero de Documento</label>
            <br>
            <input type="number" name="docNum" required max=9999999999>
            <br>
            <label for="date">Fecha</label>
            <br>
            <%= date_field :date, id: 'created_at' %>
            <br>
            <input type="submit"/>
        </form>
    </div>
</div>

<table>
    <thead>
        <tr>
            <th>Tipo de Documento</th>
            <th>N. Documento</th>
            <th>Fecha </th>
            <th>Proceso</th>

            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @logs.each do |log| %>
            <tr>
                <td></td>
                <td><%= log.docType %></td>
                <td><%= log.docNum %></td>
                <td><%= log.created_at %></td>
                <td><%= log.opType %></td>

            </tr>
        <% end %>
    </tbody>
</table>