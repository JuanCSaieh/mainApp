<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
 
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    form {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        width: 400px;
        margin: auto;
    }

    div {
        margin-bottom: 5px;
    }

    label {
        display: block;
        font-size: 14px;
        margin-bottom: 5px;
    }

    select,
    input,
    textarea {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }

    select {
        height: 35px; /* Ajusta la altura según tus preferencias */
    }

    /* Personaliza el estilo del botón según tus preferencias */
    input[type="submit"] {
        background-color: #3498db;
        color: #ffffff;
        border: none;
        padding: 10px 15px;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    input[type="submit"]:hover {
        background-color: #2980b9;
    }
</style>
<%= form_for @user, html: { multipart: true } do |f| %>
    <div>
        <%= f.label :Foto, id: 'id_photo' %>
        <%= f.file_field :photo_url, id: 'photo_upload',required: true,  accept: 'image/*'   %>
    </div>
    <div>
        <%= f.label :'Tipo de documento',id: 'id_docType' %>
        <%= f.select :docType, User.docTypes.keys.map{ |key| [key.humanize, key] } %>
    </div>
    <div>
        <%= f.label :'Número de Documento',id: 'id_docNum' %>
        <%= f.number_field :docNum, max: 9999999999,required: true%>
    </div>
    <div>
        <%= f.label :Nombre ,id: 'id_firstName' %>
        <%= f.text_field :firstName ,required: true,maxlength: 30%>
    </div>
    <div>
        <%= f.label :'Segundo nombre',id: 'id_secondName' %>
        <%= f.text_field :secondName, maxlength: 30%>
    </div>
    <div>
        <%= f.label :Apellidos ,id: 'id_lastName' %>
        <%= f.text_field :lastName ,required: true, maxlength: 60%>
    </div>
    <div>
        <%= f.label :Género,id: 'id_gender' %>
        <%= f.select :gender, User.genders.keys.map{ |key| [key.humanize, key] } ,required: true%>
    </div>
    <div>
        <%= f.label :'Fecha de Nacimiento ' ,id: 'dateBirth'%>
        <%= f.date_field :dateBirth, id: 'datepicker' ,required: true%>
    </div>
    <div>
        <%= f.label :email ,id: 'id_email'%>
        <%= f.email_field :email, class: 'form-control' ,required: true%>
    </div>
    <div>
        <%= f.label :Número ,id: 'id_phoneNumber' %>
        <%= f.number_field :phoneNumber ,required: true, max:9999999999%>
    </div>
    <div>
        <%= f.submit 'Guardar', class: 'btn btn-primary' %>
    </div>
<% end %>

